<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/lace_white"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView_camera_chat_log_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/goyang"
            android:gravity="center"
            android:text="카메라"
            android:textColor="@color/mocha_brown"
            android:textSize="30sp" />

        <View
            android:id="@+id/divider_chat_log_more"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="10dp"
            android:background="@color/cinnamon_brown" />

        <TextView
            android:id="@+id/textView_return_chat_log_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/goyang"
            android:gravity="center"
            android:text="대여하기/반납하기"
            android:textColor="@color/mocha_brown"
            android:textSize="30sp" />
    </LinearLayout>

</RelativeLayout>