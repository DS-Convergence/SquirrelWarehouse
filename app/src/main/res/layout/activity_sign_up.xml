<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rice_white"
    tools:context=".SignUpActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/oat_yellow">

            <TextView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:paddingLeft="20dp"
                android:fontFamily="@font/goyang"
                android:textColor="@color/mocha_brown"
                android:text="&lt;" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/goyang"
                android:paddingLeft="60dp"
                android:paddingTop="13dp"
                android:paddingBottom="15dp"
                android:textSize="30sp"
                android:textColor="@color/mocha_brown"
                android:text="회원가입"/>


        </FrameLayout>

        <EditText
            android:id="@+id/id_sign_up"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:padding="10dp"
            android:fontFamily="@font/jsdongkang_regular"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@color/grey"
            android:textSize="20sp"
            android:textColor="@color/mocha_brown"
            android:hint="아이디(이메일 주소)"/>
        <EditText
            android:id="@+id/nick_sign_up"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            android:padding="10dp"
            android:fontFamily="@font/jsdongkang_regular"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@color/grey"
            android:textSize="20sp"
            android:textColor="@color/mocha_brown"
            android:hint="닉네임"/>
        <EditText
            android:id="@+id/pw_sign_up"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:padding="10dp"
            android:fontFamily="@font/jsdongkang_regular"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@color/grey"
            android:textSize="20sp"
            android:textColor="@color/mocha_brown"
            android:hint="비밀번호(6자리 이상)"/>

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="480dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="회원가입"
            android:textSize="20sp"
            android:fontFamily="@font/goyang"
            android:backgroundTint="@color/peanut_brown"/>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>