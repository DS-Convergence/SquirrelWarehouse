<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetLocationInformationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/rice_white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--height 50->70dp으로 변경-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/oat_yellow">
                <!--back 버튼 textview로 구현-->
                <TextView
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:paddingLeft="20dp"
                    android:fontFamily="@font/goyang"
                    android:textColor="@color/mocha_brown"
                    android:text="&lt;" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/goyang"
                    android:paddingLeft="60dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="15dp"
                    android:textSize="30sp"
                    android:textColor="@color/mocha_brown"
                    android:text="신고하기"/>


           </FrameLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="80dp"
                android:padding="10dp"
                android:gravity="center"
                android:fontFamily="@font/goyang"
                android:textSize="20sp"
                android:textColor="@color/mocha_brown"
                android:text="신고사유 : "/>
            <!-- kt파일에 onClick으로 초기값 지정해주기-->
            <Spinner
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/jsdongkang_regular"
                android:layout_gravity="right"
                android:textColor="@color/black"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="140dp"
                android:padding="10dp"
                android:gravity="center"
                android:fontFamily="@font/goyang"
                android:textSize="20sp"
                android:textColor="@color/mocha_brown"
                android:text="신고자료 : "/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="100dp"
                android:gravity="center"
                android:fontFamily="@font/goyang"
                android:textSize="20sp"
                android:backgroundTint="@color/peanut_brown"
                android:text="첨부파일"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="200dp"
                android:padding="10dp"
                android:gravity="center"
                android:fontFamily="@font/goyang"
                android:textSize="20sp"
                android:textColor="@color/mocha_brown"
                android:text="신고내용 : "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="250dp"
                android:layout_marginRight="10dp"
                android:background="@color/grey"
                android:fontFamily="@font/jsdongkang_regular"
                android:gravity="center_horizontal|center_vertical"
                android:hint="신고내용을 입력하세요"
                android:textColor="@color/black" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/peanut_brown"
                android:fontFamily="@font/goyang"
                android:gravity="center"
                android:text="제출하기"
                android:textSize="20sp" />

        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>