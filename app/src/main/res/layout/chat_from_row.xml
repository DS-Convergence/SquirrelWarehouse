<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <TextView
        android:id="@+id/textView_from_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/colorback2round"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:fontFamily="@font/jsdongkang_regular"
        android:text="This is my Message. I eunbae Kim, Nice to meet you. It's so glad to see you"
        android:textColor="#5A3E29"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_chat_from_row"
        app:layout_constraintEnd_toStartOf="@+id/imageview_chat_from_row"
        app:layout_constraintTop_toTopOf="@+id/imageview_chat_from_row" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_chat_from_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:civ_border_color="#D9D9D9"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rounded_button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/jsdongkang_regular"
        android:text="시간"
        android:textColor="#5A3E29"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_from_row"
        app:layout_constraintEnd_toStartOf="@+id/textView_from_row" />

</androidx.constraintlayout.widget.ConstraintLayout>