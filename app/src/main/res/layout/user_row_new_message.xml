<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="#F6F2F1">

    <TextView
        android:id="@+id/username_textview_new_message"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:background="#F6F2F1"
        android:fontFamily="@font/goyang"
        android:text="유저이름"
        android:textColor="#7D3C02"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView_new_message"
        app:layout_constraintTop_toTopOf="@+id/imageView_new_message" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_new_message"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rounded_button" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#7D3C02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/divider_horizontal_textfield" />

    <TextView
        android:id="@+id/chattime_textview_new_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/goyang"
        android:text="시간"
        android:textColor="#7D3C02"
        app:layout_constraintStart_toStartOf="@+id/Productname_textview_new_message"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Productname_textview_new_message"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/goyang"
        android:text="물건 이름"
        android:textColor="#7D3C02"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/username_textview_new_message"
        app:layout_constraintStart_toEndOf="@+id/username_textview_new_message"
        app:layout_constraintTop_toTopOf="@+id/username_textview_new_message" />

    <TextView
        android:id="@+id/LastMessage_textview_new_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/goyang"
        android:text="마지막 채팅 내용"
        android:textColor="#7D3C02"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/username_textview_new_message"
        app:layout_constraintTop_toBottomOf="@+id/username_textview_new_message" />
</androidx.constraintlayout.widget.ConstraintLayout>